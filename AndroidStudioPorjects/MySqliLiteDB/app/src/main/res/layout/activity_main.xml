<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Name EditText -->
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="381dp"
        android:layout_height="76dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="Name" />

    <!-- Occupation EditText -->
    <EditText
        android:id="@+id/occupationEditText"
        android:layout_width="392dp"
        android:layout_height="66dp"
        android:layout_below="@id/nameEditText"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="Occupation" />

    <!-- Serial Number EditText -->
    <EditText
        android:id="@+id/serialNumberEditText"
        android:layout_width="381dp"
        android:layout_height="61dp"
        android:layout_below="@id/occupationEditText"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="Serial Number" />

    <!-- Add Button -->
    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_below="@id/serialNumberEditText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <!-- View Button -->
    <Button
        android:id="@+id/viewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:layout_below="@id/addButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <!-- Update Button -->
    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_below="@id/viewButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <!-- Delete Button -->
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_below="@id/updateButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/displayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleteButton"
        android:text=""
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/design_default_color_primary"
        android:paddingTop="16dp" />


</RelativeLayout>
